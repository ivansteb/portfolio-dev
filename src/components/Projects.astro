---
import React from './icons/tech/React.astro';
import Tailwind from './icons/tech/Tailwind.astro';
import AstroIcon from './icons/tech/AstroIcon.astro';
import Javascript from './icons/tech/Javascript.astro';
import CSharp from './icons/tech/CSharp.astro';

const TAGS = {
    REACT: {
        name: "React",
        class: "text-[#61dbfb] bg-[#0d1117]",
        icon: React,
    },
    TAILWINDCSS: {
        name: "TailwindCSS",
        class: "text-[#38b2ac] bg-[#0d1117]",
        icon: Tailwind,
    },
    ASTRO: {
        name: "Astro",
        class: "text-[#0d1117] bg-[#61dafb]",
        icon: AstroIcon,
    },
    // JAVASCRIPT: {
    //     name: "JavaScript",
    //     class: "text-[#f7df1e] bg-[#0d1117]",
    //     icon: Javascript,
    // },
    // CSHARP: {
    //     name: "C#",
    //     class: "text-[#239120] bg-[#0d1117]",
    //     icon: CSharp,
    // }
}

const PROJECTS = [
    {
        title: "Bethany's Pie Shop",
        description: "Sitio web de una tienda de tartas y pasteles, con carrito de compras y formulario de contacto.",
        link: 'https://pieshopdemo.com/',
        github: 'https://github.com/ivansteb/',
        image: "/images/bethanypieshop.png",
        tags: [TAGS.REACT, TAGS.TAILWINDCSS]
    },
    {
        title: "Secondary School",
        description: "Sitio web de una escuela secundaria, con información sobre la institución y formulario de contacto.",
        link: 'https://secondaryschooldemo.com/',
        github: '#',
        image: "/images/secondaryschool.png",
        tags: [TAGS.ASTRO, TAGS.TAILWINDCSS]
    }
]
---

{
    PROJECTS.map(({ title, description, tags, image }) => (
        <article>
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-2">{title}</h3>
            <p class="text-md mb-4 text-pretty">{description}</p>
            <ul>
                {
                    tags.map((tag) => (
                        <li>
                            <span class={`flex gap-x-2 rounded-full text-sm ${tag.class} p-2`}>
                                <tag.icon class="size-6" />
                                {tag.name}
                            </span>
                        </li>
                    ))
                }
            </ul>
            <img 
                src={image} 
                alt={`Captura de pantalla del proyecto ${title}`}
                class="rounded shadow-xl shadow-white/10"
            />
        </article>
    ))
}
