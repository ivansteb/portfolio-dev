---
import React from './icons/tech/React.astro';
import Tailwind from './icons/tech/Tailwind.astro';
import AstroIcon from './icons/tech/AstroIcon.astro';
import Javascript from './icons/tech/Javascript.astro';
import CSharp from './icons/tech/CSharp.astro';

const TAGS = {
    REACT: {
        name: "React",
        class: "text-[#61dbfb] bg-[#0d1117]",
        icon: React,
    },
    TAILWINDCSS: {
        name: "TailwindCSS",
        class: "text-[#38b2ac] bg-[#0d1517]",
        icon: Tailwind,
    },
    ASTRO: {
        name: "Astro",
        class: "text-[#d64e04] bg-[#2b1d16]",
        icon: AstroIcon,
    },
    JAVASCRIPT: {
        name: "JavaScript",
        class: "text-[#f7df1e] bg-[#242004]",
        icon: Javascript,
    },
    CSHARP: {
        name: "C#",
        class: "text-[#239120] bg-[#0b290a]",
        icon: CSharp,
    }
}

const PROJECTS = [
    {
        title: "Bethany's Pie Shop",
        description: "Sitio web de una tienda de tartas y pasteles, con carrito de compras y formulario de contacto.",
        link: 'https://pieshopdemo.com/',
        github: 'https://github.com/ivansteb/',
        image: "/images/bethanypieshop.png",
        tags: [TAGS.REACT, TAGS.TAILWINDCSS]
    },
    {
        title: "California High School",
        description: "Sitio web de una escuela secundaria, con información sobre la institución y formulario de contacto.",
        link: 'https://secondaryschooldemo.com/',
        github: '#',
        image: "/images/highschool.png",
        tags: [TAGS.ASTRO, TAGS.TAILWINDCSS]
    }
]
---

{
    PROJECTS.map(({ title, description, tags, image }) => (
        <article class="my-16 grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
            <div>
                <h3 class="text-2xl font-semibold text-green-900 dark:text-green-300/70 mb-2">{title}</h3>
                <p class="text-md mb-4 text-pretty font-extralight">{description}</p>
                <ul class="flex gap-x-4 flex-row mb-2">
                    {
                        tags.map((tag) => (
                            <li>
                            <span class={`flex gap-x-2 rounded-full text-sm ${tag.class} py-1 px-2`}>
                                <tag.icon class="size-6" />
                                {tag.name}
                            </span>
                            </li>
                        ))
                    }
                </ul>
            </div>
            <div>
                <img 
                    src={image} 
                    alt={`Captura de pantalla del proyecto ${title}`}
                    class="rounded shadow-xl shadow-white/10 w-full"
                />
            </div>
        </article>
    ))
}
